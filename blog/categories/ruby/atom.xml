</span><span class='line'>    <span class="nb">puts</span> <span class="s2">&quot;&amp;gt;&amp;gt; </span><span class="si">#{</span><span class="n">host</span><span class="si">}</span><span class="s2"> 沒有回應&quot;</span>
</span><span class='line'>  <span class="k">end</span>
</span><span class='line'>  <span class="nb">puts</span>
</span><span class='line'><span class="k">end</span>
</span><span class='line'><span class="o">&lt;</span><span class="sr">/code&gt;&lt;/</span><span class="n">pre</span><span class="o">&gt;</span>
</span><span class='line'>
</span><span class='line'><span class="o">&lt;</span><span class="nb">p</span><span class="o">&gt;</span>  <span class="k">end</span><span class="o">&lt;</span><span class="sr">/p&gt;</span>
</span><span class='line'>
</span><span class='line'><span class="sr">&lt;p&gt;  def upload_key(host,user,passwd)</span>
</span><span class='line'><span class="sr">    Net::SCP.upload!(host,user, &amp;ldquo;</span><span class="si">#{</span><span class="no">ENV</span><span class="o">[&amp;</span><span class="n">lsquo</span><span class="p">;</span><span class="no">HOME</span><span class="o">&amp;</span><span class="n">rsquo</span><span class="p">;</span><span class="o">]</span><span class="si">}</span><span class="sr">/</span><span class="o">.</span><span class="n">ssh</span><span class="o">/</span><span class="c1">#{$localip}.pub&amp;rdquo;, &amp;ldquo;id_rsa.pub&amp;rdquo;,  :ssh =&gt; { :password =&gt; passwd })</span>
</span><span class='line'>  <span class="k">end</span><span class="o">&lt;</span><span class="sr">/p&gt;</span>
</span><span class='line'>
</span><span class='line'><span class="sr">&lt;p&gt;  def script(host,user,passwd)</span>
</span><span class='line'><span class="sr">    Net::SSH.start(host,user, :password =&gt; passwd ) do |ssh|</span>
</span><span class='line'><span class="sr">      ssh.exec!(&amp;ldquo;sed -i /</span><span class="c1">#{ENV[&amp;lsquo;USER&amp;rsquo;]}@#{@hostname}/d ~/.ssh/authorized_keys&amp;rdquo;)</span>
</span><span class='line'>      <span class="n">ssh</span><span class="o">.</span><span class="n">exec!</span><span class="p">(</span><span class="o">&amp;</span><span class="n">ldquo</span><span class="p">;</span><span class="n">mkdir</span> <span class="o">~</span><span class="sr">/.ssh&amp;rdquo;)</span>
</span><span class='line'><span class="sr">      ssh.exec!(&amp;ldquo;cat id_rsa.pub &gt;&gt; ~/</span><span class="o">.</span><span class="n">ssh</span><span class="o">/</span><span class="n">authorized_keys</span><span class="o">&amp;</span><span class="n">rdquo</span><span class="p">;)</span>
</span><span class='line'>      <span class="n">ssh</span><span class="o">.</span><span class="n">exec!</span><span class="p">(</span><span class="o">&amp;</span><span class="n">ldquo</span><span class="p">;</span><span class="n">chmod</span> <span class="n">go</span><span class="o">-</span><span class="n">w</span> <span class="o">~&amp;</span><span class="n">rdquo</span><span class="p">;)</span>
</span><span class='line'>      <span class="n">ssh</span><span class="o">.</span><span class="n">exec!</span><span class="p">(</span><span class="o">&amp;</span><span class="n">ldquo</span><span class="p">;</span><span class="n">chmod</span> <span class="mi">700</span> <span class="o">~</span><span class="sr">/.ssh&amp;rdquo;)</span>
</span><span class='line'><span class="sr">      ssh.exec!(&amp;ldquo;chmod 600 ~/</span><span class="o">.</span><span class="n">ssh</span><span class="o">/</span><span class="n">authorized_keys</span><span class="o">&amp;</span><span class="n">rdquo</span><span class="p">;)</span>
</span><span class='line'>    <span class="k">end</span>
</span><span class='line'>  <span class="k">end</span><span class="o">&lt;</span><span class="sr">/p&gt;</span>
</span><span class='line'>
</span><span class='line'><span class="sr">&lt;p&gt;  def ssh_keygen</span>
</span><span class='line'><span class="sr">    if not File.exist?(&amp;ldquo;</span><span class="si">#{</span><span class="no">ENV</span><span class="o">[&amp;</span><span class="n">lsquo</span><span class="p">;</span><span class="no">HOME</span><span class="o">&amp;</span><span class="n">rsquo</span><span class="p">;</span><span class="o">]</span><span class="si">}</span><span class="sr">/</span><span class="o">.</span><span class="n">ssh</span><span class="o">/</span><span class="c1">#{$localip}&amp;rdquo;)</span>
</span><span class='line'>      <span class="nb">system</span><span class="p">(</span><span class="o">&amp;</span><span class="n">ldquo</span><span class="p">;</span><span class="n">ssh</span><span class="o">-</span><span class="n">keygen</span> <span class="o">-</span><span class="n">t</span> <span class="n">rsa</span> <span class="o">-</span><span class="n">f</span> <span class="c1">#{ENV[&amp;lsquo;HOME&amp;rsquo;]}/.ssh/#{$localip} -N &amp;lsquo;&amp;rsquo; -q&amp;rdquo;)</span>
</span><span class='line'>    <span class="k">end</span>
</span><span class='line'>  <span class="k">end</span>
</span><span class='line'><span class="k">end</span>
</span></code></pre></td></tr></table></div></figure></p>
